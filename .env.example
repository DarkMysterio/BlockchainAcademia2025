# Environment Configuration
# Copy this file to .env and fill in your values

# Network RPCs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Private Key (without 0x prefix)
# ⚠️ NEVER commit this to git! Keep it secret!
PRIVATE_KEY=your_private_key_here

# API Keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Optional: Gas reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# IPFS Configuration (for metadata storage)
IPFS_API_KEY=your_pinata_or_web3storage_key
IPFS_SECRET=your_ipfs_secret

# Frontend Configuration
NEXT_PUBLIC_CONTRACT_ADDRESS=deployed_contract_address
NEXT_PUBLIC_NETWORK_ID=11155111

# Database (if using off-chain components)
DATABASE_URL=postgresql://user:password@localhost:5432/volunteer_id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXX-X
